<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fondo_App"
    tools:context=".Inicio">

    <Button
        android:id="@+id/btnInicioIrGithub"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/Fondo_Btn_Login"
        android:fontFamily="@font/work_sans"
        android:letterSpacing="0.008"
        android:text="Repositorio Github"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Botones_Color"
        android:textSize="18sp"
        android:textStyle="normal"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInicioIrLlamada"
        app:strokeColor="@color/Letras_Destacadas"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/btnInicioIrCorreo"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/Fondo_Btn_Login"
        android:fontFamily="@font/work_sans"
        android:letterSpacing="0.008"
        android:text="Correo Electronico"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Botones_Color"
        android:textSize="18sp"
        android:textStyle="normal"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:strokeColor="@color/Letras_Destacadas"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/btnInicioCerrarSesion"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/work_sans"
        android:text="Cerrar sesion"
        android:textColor="@color/Botones_Color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/radius_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Pantalla Inicio"
        app:titleMarginStart="50dp"
        app:titleTextAppearance="@style/barra_sup"
        app:titleTextColor="@color/Letras_Barra_sup" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProgramador"
        android:layout_width="143dp"
        android:layout_height="144dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:shapeAppearance="@style/imagenes_redondeada"
        app:srcCompat="@drawable/imgprogramador" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/tomorrow"
        android:text="Datos Programador"
        android:textColor="@color/Letras_Destacadas"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProgramador"
        app:lineHeight="35px" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:text="Nombre: Zabala Dimas, Alexis"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/btnInicioIrCorreo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:lineHeight="90px" />

    <Button
        android:id="@+id/btnInicioIrLlamada"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/Fondo_Btn_Login"
        android:fontFamily="@font/work_sans"
        android:letterSpacing="0.008"
        android:lineHeight="18px"
        android:text="Llamada Telefonica"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Botones_Color"
        android:textSize="18sp"
        android:textStyle="normal"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInicioIrCorreo"
        app:strokeColor="@color/Letras_Destacadas"
        app:strokeWidth="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>